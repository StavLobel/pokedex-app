# Environment Configuration Example
# Copy this file to .env and update the values

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pokemon_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL_POKEMON_DATA=86400
REDIS_TTL_IMAGE_RESULTS=3600

# External APIs
POKEAPI_BASE_URL=https://pokeapi.co/api/v2
POKEAPI_TIMEOUT=30
POKEAPI_RETRY_ATTEMPTS=3

# AI Model Configuration
AI_MODEL_PATH=./models/pokemon_classifier.pkl
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_PREDICTIONS=3

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DIRECTORY=./storage/uploads

# Security
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090